##############################################
# WorldWhisperer Configuration
##############################################

####################
# PRIVATE ENTRIES
# Required for the application to work
####################

# ChromaDB Settings
chromadb_collection_name="world_whisper_collection"
chromadb_path="./chromadb"

# OpenRouter API Settings
# Get your API key from https://openrouter.ai/keys
openrouter_api_key="your_openrouter_api_key_here"

# Optional: Site identification for OpenRouter
openrouter_site_url="http://localhost"
openrouter_site_name="WorldWhisperer"


####################
# PUBLIC ENTRIES
# Adjust these to fine-tune behavior
####################

# How many context results to retrieve for each query
top_k="12"

# Maximum character length for context (prevents token overflow)
chromadb_context_limit="4000"

# OpenRouter Model Selection
# Options include:
# - anthropic/claude-3.5-sonnet (recommended for quality)
# - anthropic/claude-3-haiku (faster, cheaper)
# - openai/gpt-4-turbo
# - openai/gpt-3.5-turbo (cheaper)
# - meta-llama/llama-3.1-70b-instruct
# See https://openrouter.ai/models for full list
openrouter_model="anthropic/claude-3.5-sonnet"

# Cost Check Override
# If "True", skips cost confirmation prompts
# WARNING: May incur unexpected costs
gpt_override_cost_check="False"

# Local Embedding Model
# Options from sentence-transformers:
# - all-MiniLM-L6-v2 (default, fast, lightweight ~80MB)
# - all-mpnet-base-v2 (better quality, larger ~420MB)
# - multi-qa-mpnet-base-dot-v1 (optimized for Q&A)
# See https://www.sbert.net/docs/pretrained_models.html
local_embed_model="all-MiniLM-L6-v2"
